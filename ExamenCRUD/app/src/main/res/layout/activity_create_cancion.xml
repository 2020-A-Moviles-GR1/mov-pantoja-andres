<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateCancionActivity">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="399dp"
        android:layout_height="83dp"
        android:background="#4898BC"
        android:gravity="clip_horizontal|center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_titulo_crear_cancion"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:text="Crear Canción"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="394dp"
        android:layout_height="727dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <EditText
            android:id="@+id/et_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="?attr/dialogPreferredPadding"
            android:ems="10"
            android:hint="Título"
            android:inputType="textPersonName" />

        <Switch
            android:id="@+id/sw_premiada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="?attr/dialogPreferredPadding"
            android:text="Premiada"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/ed_fecha_lanzamiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="?attr/dialogPreferredPadding"
            android:ems="10"
            android:hint="Fecha YYYY-MM-dd"
            android:inputType="date" />

        <EditText
            android:id="@+id/etn_reproducciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="?attr/dialogPreferredPadding"
            android:ems="10"
            android:hint="Reproduciones"
            android:inputType="number" />

        <EditText
            android:id="@+id/etnd_duracion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="?attr/dialogPreferredPadding"
            android:ems="10"
            android:hint="Tiempo"
            android:inputType="numberDecimal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_margin="?attr/dialogPreferredPadding"
            android:gravity="clip_horizontal|center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Artista"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/sp_artistas"
                android:layout_width="192dp"
                android:layout_height="42dp"
                android:layout_margin="?attr/dialogPreferredPadding" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:layout_margin="?attr/dialogPreferredPadding"
            android:gravity="clip_horizontal|center|clip_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_aceptar_cancion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Aceptar" />

            <Button
                android:id="@+id/btn_cancelar_cancion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancelar" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>